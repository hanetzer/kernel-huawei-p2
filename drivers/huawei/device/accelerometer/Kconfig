#
# accelerometer driver configuration
#

menuconfig INPUT_ACCELEROMETER
	bool "Accelerometer"
	select HUAWEI_SENSORS_INPUT_INFO
	default y
	help
		Say Y here, and a list of supported ACCELEROMETERs will be displayed.
		This option doesn't affect the kernel.



if INPUT_ACCELEROMETER


config HUAWEI_FEATURE_SENSORS_ACCELEROMETER_MMA8452
	tristate "FREESCALE MMA8452 accelerometer"
	select SERIO
	default y
	help
		Say Y here if you have the FREESCALE MMA8452 accelerometer.


config HUAWEI_FEATURE_SENSORS_ACCELEROMETER_ADI_ADXL346
	tristate "ADI ADXL346 accelerometer"
	select SERIO
	default y
	help
		Say Y here if you have the ADI ADXL346 accelerometer.


config HUAWEI_FEATURE_SENSORS_ACCELEROMETER_ST_LIS3XH
	tristate "ST LIS3DH and LIS331DLH accelerometer"
	select SERIO
	default y
	help
		Say Y here if you have the ST LIS3DH and LIS331DLH accelerometer.
config HUAWEI_FEATURE_SENSORS_ACC_COMPASS_LSM303D
	tristate "ST LSM303D accelerometer and magnetic"
	select SERIO
	default n
	help
		Say Y here if you have the ST LSM303D.
config HUAWEI_FEATURE_SENSORS_ACC_GYRO_LSM330
	tristate "ST LSM330 accelerometer and gyroscope"
	select SERIO
	default y
	help
		Say Y here if you have the ST LSM330.
config GSENSOR_DEBUG
	bool "gsensor debugging messages"
	default n
	help
		Say Y here if you want the gsensor to produce a bunch of debug
		messages to the system log.  Select this if you are having a
		problem with gsensor and want to see more of what is going on.

endif
